<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CABEBE"
    tools:context=".MainActivity17">

    <!-- Time text -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caller Name"
        android:textSize="34dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="#100F0F" />

    <!-- Orange square -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="85dp"
        android:text="00:58"
        android:textSize="30dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_weight="3"
        android:background="#fff">



        <!-- Box 1 -->
        <EditText
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_mic_off_24"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:drawableLeft="@drawable/round_volume_up_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.8"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_pause_circle_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:text="X"
            android:textSize="54dp"
            android:textAlignment="center"
            android:textColor="#AF0C0C"
            android:drawablePadding="1dp"
            android:paddingBottom="8dp" />

    </LinearLayout>



</RelativeLayout>






