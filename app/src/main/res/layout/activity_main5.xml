<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- "Welcome" Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/DaudText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daud"
        android:textSize="24sp"
        android:textColor="#FF9800"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/featuredItemsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Featured Items"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="72dp" />

    <TextView
        android:id="@+id/yourItemsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Your Items"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="332dp" />

    <TextView
        android:id="@+id/recentItemsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Recent Items"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="582dp" />

    <!-- Outer Box1 for featured items -->
    <RelativeLayout
        android:id="@+id/outerBox1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/buttonbyme2"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="20dp">

        <!-- Inner Box -->
        <RelativeLayout
            android:id="@+id/innerBox1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/boxbyme"
            android:layout_alignParentBottom="true">

            <!-- Text inside Inner Box -->
            <TextView
                android:id="@+id/innerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="24dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Islamabad"
                android:textSize="24dp"
                android:textColor="#A89E9E"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:text="10$/hr"
                android:textSize="24dp"
                android:textColor="#FF9800"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:text="7th March"
                android:textSize="20dp"
                android:textColor="#A89E9E"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>

