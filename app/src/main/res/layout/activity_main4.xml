<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/white"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_weight="5"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:background="#FFFFFFFF"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="left|bottom"
            android:textSize="30dp"
            android:text="&lt;-  Email Verification "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_weight="0.01"
            android:background="#F3EFEF" />

        <TextView
            android:background="#FFFFFFFF"
            android:textColor="#000000"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left|bottom"
            android:textSize="20dp"
            android:text="Enter the code sent to your email"
            />
        <TextView
            android:background="#FFFFFFFF"
            android:textColor="#FF9800"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left|bottom"
            android:textSize="20dp"
            android:text="Resend code in 23 seconds"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Box 1 -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#E8E1E1"
                android:inputType="number"
                android:layout_marginLeft="8dp"
                android:paddingBottom="8dp"/>

            <!-- Box 2 -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#E8E1E1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:paddingBottom="8dp"/>

            <!-- Box 3 -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#E8E1E1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:paddingBottom="8dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#E8E1E1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:paddingBottom="8dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="#E8E1E1"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="8dp"/>

        </LinearLayout>


        <Button
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="0.26"
            android:background="@drawable/buttonbyme"
            android:gravity="center"
            android:onClick="onResetPasswordClick"
            android:paddingLeft="12dp"
            android:paddingBottom="8dp"
            android:text="Reset Password"
            android:textAlignment="center"
            android:textColor="#F6F6F6"
            android:textSize="25dp" />


    </LinearLayout>



</LinearLayout>