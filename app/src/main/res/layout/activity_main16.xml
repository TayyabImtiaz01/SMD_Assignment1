<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/white"
    tools:context=".MainActivity16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="4.4"
        android:background="#D6CECE">



        <!-- Box 1 -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:text="X"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#D6CECE"/>



        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="#D6CECE"
            android:drawableLeft="@drawable/baseline_wb_sunny_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="80dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="#D6CECE"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:drawablePadding="1dp"
            android:paddingBottom="8dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0.3">



        <!-- Box 1 -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_image_24"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:drawableLeft="@drawable/round_circle_24"
            android:layout_gravity="bottom"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:drawableLeft="@drawable/baseline_change_circle_24"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="bottom"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_weight="0.01">



        <!-- Box 1 -->
        <EditText
            android:layout_width="25dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:text="Photo"
            android:textSize="30dp"
            android:drawablePadding="8dp"
            android:paddingBottom="8dp"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonbyme"
            android:text="Video"
            android:textSize="30dp"

            />

    </LinearLayout>






</LinearLayout>